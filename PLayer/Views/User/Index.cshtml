@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if(Model.Count()>0){

    <form class="my-3" asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8 ">
            <input placeholder="Search ..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-dark" />
        </div>
    </div>

</form>

<table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
            <td>@Html.DisplayNameFor(U=>U.Id)</td>       
            <td>@Html.DisplayNameFor(U=>U.FirstName)</td>
            <td>@Html.DisplayNameFor(U=>U.LastName)</td>
            <td>@Html.DisplayNameFor(U=>U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
            <td>@Html.DisplayNameFor(U=>U.Roles)</td>
             
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
           
            </tr>
        </thead>
        <tbody>
            @foreach(var model in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(U=>model.Id)</td>
                    <td>@Html.DisplayFor(U=>model.FirstName)</td>
                    <td>@Html.DisplayFor(U=>model.LastName)</td>
                    <td>@Html.DisplayFor(U=>model.Email)</td>
                    <td>@Html.DisplayFor(U => model.PhoneNumber)</td>
                    <td>@string.Join(" , " ,model.Roles)</td>

                    <partial name="_buttonPartialView" model="model.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="alert alert-warning">
        <h3>There is No Users</h3>
    </div>
}