@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Edit" >
    <div class="form-group">

        <label asp-for="Id" class="col-form-label"></label>
        <input readonly class="form-control" asp-for="Id">
    </div>
    <div class="form-group">

        <label asp-for="FirstName" class="col-form-label"></label>
        <input  class="form-control" asp-for="FirstName">
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-form-label"></label>
        <input  class="form-control" asp-for="LastName">
    </div>
   
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input class="form-control" asp-for="PhoneNumber">
    </div>
   
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input readonly class="form-control" asp-for="Email">
    </div>

    <input type="submit" class="btn btn-primary mt-3" value="Save" />
    <a asp-action="Index" class="btn btn-light mt-3">Back to List</a>
</form>