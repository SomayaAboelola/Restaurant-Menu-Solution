@model MenuItemViewModel ;

@if(@Model.ImageUrl is not null)
{
   <div class="form-group">
   <img src="~/Files/Images/@Model.ImageUrl" height="150" width="150" class="img-circle"/>
    <input hidden asp-for="ImageUrl">
</div> 
}


<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input readonly class="form-control" asp-for="Name">
</div>
<div class="form-group">
    <label asp-for="Description" class="col-form-label"></label>
    <input readonly class="form-control" asp-for="Description">
</div>
<div class="form-group">
    <label asp-for="Price" class="col-form-label"></label>
    <input readonly class="form-control" asp-for="Price">
</div>

<div class="form-group">
    <label class="form-check-label" asp-for="@Model.IsActive"></label>
    <br />
    <input Disabled class="form-check-input" asp-for="@Model.IsActive" />

</div>

